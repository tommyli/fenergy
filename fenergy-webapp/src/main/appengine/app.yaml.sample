runtime: java
env: flex

runtime_config:
   jdk: openjdk8

handlers:
- url: /.*
  script: this field is required, but ignored

resources:
  cpu: 1
  memory_gb: 0.6
  disk_size_gb: 10

health_check:
  enable_health_check: False
  check_interval_sec: 5
  timeout_sec: 4
  unhealthy_threshold: 2
  healthy_threshold: 2

env_variables:
  fenergy_db_driver: org.postgresql.Driver
  fenergy_db_schema: fenergy
  fenergy_db_url: jdbc:postgresql://localhost/fenergytest
  fenergy_db_userid: username
  fenergy_db_password: password
